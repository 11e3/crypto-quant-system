# Upbit Quant System - Configuration Template
#
# Copy this file to config/settings.yaml and fill in your values
# DO NOT commit config/settings.yaml to version control
#
# Note: Environment variables take precedence over this file
# See docs/guides/configuration.md for details

# Trading Configuration
trading:
  # Comma-separated list of tickers to trade
  tickers: "KRW-BTC,KRW-ETH,KRW-XRP,KRW-TRX"
  
  # Trading fee rate (0.0005 = 0.05%)
  fee_rate: 0.0005
  
  # Maximum number of concurrent trading positions
  max_slots: 4
  
  # Minimum order amount in KRW
  min_order_amount: 5000.0

# Strategy Configuration
strategy:
  # Strategy name (VanillaVBO, MinimalVBO, StrictVBO, or custom)
  name: "VanillaVBO"
  
  # SMA period for exit condition
  sma_period: 5
  
  # Trend SMA period for trend filter
  trend_sma_period: 10
  
  # Short noise period (K value)
  short_noise_period: 5
  
  # Long noise period (noise baseline)
  long_noise_period: 10
  
  # Exclude current bar from calculations (matches legacy behavior)
  exclude_current: true

# Bot Configuration
bot:
  # Daily reset time (hour: 0-23, minute: 0-59)
  daily_reset_hour: 9
  daily_reset_minute: 0
  
  # WebSocket reconnect delay in seconds
  websocket_reconnect_delay: 3.0
  
  # API retry delay in seconds
  api_retry_delay: 0.5

# Telegram Notifications (optional)
telegram:
  enabled: true
  token: ""  # Set via TELEGRAM_TOKEN environment variable
  chat_id: ""  # Set via TELEGRAM_CHAT_ID environment variable

# Upbit API Configuration
# IMPORTANT: Never commit real API keys to version control
# Use environment variables (UPBIT_ACCESS_KEY, UPBIT_SECRET_KEY) instead
upbit:
  access_key: ""  # Set via UPBIT_ACCESS_KEY environment variable
  secret_key: ""  # Set via UPBIT_SECRET_KEY environment variable
