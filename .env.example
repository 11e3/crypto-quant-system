# Upbit Quant System - Environment Variables Template
# 
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information
#
# For production, use environment variables directly instead of .env file

# =============================================================================
# Upbit API Configuration (REQUIRED for live trading)
# =============================================================================
# Get your API keys from: https://upbit.com/mypage/open_api_management
UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# =============================================================================
# Telegram Notifications (OPTIONAL)
# =============================================================================
# Get your bot token from: https://t.me/BotFather
# Get your chat ID from: https://t.me/userinfobot
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=true

# =============================================================================
# Trading Configuration (OPTIONAL - uses defaults if not set)
# =============================================================================
# Comma-separated list of tickers to trade
TRADING_TICKERS=KRW-BTC,KRW-ETH,KRW-XRP,KRW-TRX

# Trading fee rate (0.0005 = 0.05%)
TRADING_FEE_RATE=0.0005

# Maximum number of concurrent trading positions
TRADING_MAX_SLOTS=4

# Minimum order amount in KRW
TRADING_MIN_ORDER_AMOUNT=5000.0

# =============================================================================
# Strategy Configuration (OPTIONAL - uses defaults if not set)
# =============================================================================
STRATEGY_NAME=VanillaVBO
STRATEGY_SMA_PERIOD=5
STRATEGY_TREND_SMA_PERIOD=10
STRATEGY_SHORT_NOISE_PERIOD=5
STRATEGY_LONG_NOISE_PERIOD=10
STRATEGY_EXCLUDE_CURRENT=true

# =============================================================================
# Bot Configuration (OPTIONAL - uses defaults if not set)
# =============================================================================
# Daily reset time (hour: 0-23, minute: 0-59)
BOT_DAILY_RESET_HOUR=9
BOT_DAILY_RESET_MINUTE=0

# WebSocket reconnect delay in seconds
BOT_WEBSOCKET_RECONNECT_DELAY=3.0

# API retry delay in seconds
BOT_API_RETRY_DELAY=0.5
